#include<bits/stdc++.h> 

using namespace std;

int main( )
{
    int n;
    cin>>n;
    while(n/7){
        if(n%7==0)
            n = n / 7;
        else if (n%7 == 1)
            n = (n-1)/7;
        else{
            cout<<"NO";
            return 0;
        }
    }
    if(n==1) cout<<"YES";
    else cout<<"NO";
    return 0;
}
